<UserControl x:Class="SchoolAppCore.Views.AdminViews.FormViews.SubjectForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolAppCore.Views.AdminViews.FormViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5">
            <TextBlock Text="Username"/>
            <TextBox x:Name="txtUsername"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="5">
            <TextBlock Text="Password"/>
            <PasswordBox x:Name="txtPassword"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Exit" Margin="10"/>
            <Button Content="Login" Margin="10" Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
